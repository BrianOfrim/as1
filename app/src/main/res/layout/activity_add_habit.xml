<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brianofrim.as1.AddHabitActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Habit"
        android:id="@+id/AddHabitTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Habit name"
        android:id="@+id/habitNameText"
        android:layout_below="@+id/AddHabitTitle"
        android:layout_alignEnd="@+id/AddHabitTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HabitNameTextBox"
        android:layout_below="@+id/habitNameText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change"
        android:onClick="showDatePickerDialog"
        android:id="@+id/button"
        android:layout_below="@+id/HabitNameTextBox"
        android:layout_alignEnd="@+id/HabitNameTextBox" />

    <!--<ListView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/daysOfWeekListView"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_below="@+id/button"-->
        <!--android:layout_above="@+id/addHabitBtn" />-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add habit"
        android:id="@+id/addHabitBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/daysOfWeekListView"
        android:layout_alignStart="@+id/daysOfWeekListView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="HabitDate"
        android:id="@+id/selectedDateText"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentStart="true" />


</RelativeLayout>
